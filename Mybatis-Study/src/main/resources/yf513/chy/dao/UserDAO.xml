<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yf513.chy.dao.UserDAO">
    <!--配置查询所有-->
    <select id="findAll" resultType="yf513.chy.domain.User">
        select*
        from user
    </select>
    <resultMap id="userAccount" type="yf513.chy.domain.User">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="age" column="age"/>
        <result property="email" column="email"/>
        <collection property="accounts" ofType="yf513.chy.domain.Account">
            <id column="id" property="id"/>
            <result column="uid" property="uid"/>
            <result column="money" property="money"/>
        </collection>
    </resultMap>

    <select id="selectAll" resultMap="userAccount">
        select *
        from db1.user u inner join db1.account a
        on u.id=a.uid
    </select>

    <select id="selectById" parameterType="int" resultType="yf513.chy.domain.User">
        select*
        from user
        where id = #{id}
    </select>


</mapper>
